<configuration>
	<if condition='isDefined("connector.log.properties")'>
		<then>
			<property file="${connector.log.properties}" />
		</then>
	</if>
	<if condition='!isDefined("connector.log.level")'>
		<then>
			<property name="connector.log.level" value="${connector.log.level.root:-INFO}" />
		</then>
	</if>
	<if condition='!isDefined("connector.log.level.spring")'>
		<then>
			<property name="connector.log.level.spring" value="${connector.log.level.root:-INFO}" />
		</then>
	</if>

	<appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
		<encoder>
			<pattern>%d{HH:mm:ss.SSS} %highlight(%-5level) %logger{36} - %msg%n%ex{${connector.log.exceptions:-short}}</pattern>
		</encoder>
		<if condition='isDefined("connector.log.file")'>
			<then>
				<filter class="ch.qos.logback.classic.filter.ThresholdFilter">
					<level>WARN</level>
				</filter>
			</then>
		</if>
	</appender>
	<if condition='isDefined("connector.log.file")'>
		<then>
			<appender name="FILE" class="ch.qos.logback.core.FileAppender">
				<encoder>
					<pattern>%d{yyyy-MM-dd HH:mm:ss} %highlight(%-5level) %logger{36} - %msg%n%ex{${connector.log.exceptions:-short}}</pattern>
				</encoder>
				<file>${connector.log.file}</file>
			</appender>
		</then>
	</if>

	<root level="${connector.log.level.root:-INFO}">
		<appender-ref ref="STDOUT" />
		<if condition='isDefined("connector.log.file")'>
			<then>
				<appender-ref ref="FILE" />
			</then>
		</if>
	</root>

	<logger name="net.particify.arsnova" level="${connector.log.level}" />
	<logger name="org.springframework" level="${connector.log.level.spring}" />
</configuration>
